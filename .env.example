# Egile Agent Hub Environment Configuration
# ==========================================

# === Agent Model Configuration ===
# One of these API keys is required for the agents to function
# Priority order: MISTRAL > XAI > OPENAI

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-2512

# X.AI (Grok)
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4-1-fast-reasoning

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# === AgentOS Configuration ===
AGENTOS_PORT=8000
AGENTOS_HOST=0.0.0.0

# === Agent Hub Configuration ===
# Path to the agents configuration file (YAML)
AGENTS_CONFIG_FILE=agents.yaml

# === ProspectFinder MCP Server ===
# Required only if using ProspectFinder agent
PROSPECTFINDER_MCP_PORT=8001
PROSPECTFINDER_MCP_HOST=localhost

# Google API credentials for ProspectFinder
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# === X/Twitter MCP Server ===
# Required only if using XTwitter agent
XTWITTER_MCP_PORT=8002
XTWITTER_MCP_HOST=localhost

# X/Twitter API credentials for posting
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here

# Optional: LLM keys for better post generation (used by MCP server)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY_MCP=your_openai_api_key_for_mcp_here

# === Database Configuration ===
# SQLite database file for session storage
DB_FILE=agent_hub.db

# === Logging ===
LOG_LEVEL=INFO
